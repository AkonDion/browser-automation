{
  "name": "warranty-registration-automation",
  "version": "1.0.0",
  "description": "Automated warranty registration form submission using Playwright",
  "main": "src/index.js",
  "scripts": {
    "install-browsers": "npx playwright install",
    "dev": "node src/index.js --mode=development",
    "prod": "node src/index.js --mode=production",
    "test": "node src/index.js --mode=test",
    "server": "node src/server.js",
    "server-dev": "NODE_ENV=development node src/server.js",
    "test-daikin": "node test-daikin.js",
    "debug-daikin": "node debug-daikin.js",
    "smoke": "node src/index.js --mode=test --repeat=5 --retries=1",
    "docker-build": "docker build -t warranty-automation .",
    "docker-run": "docker run --rm -v $(pwd)/logs:/app/logs warranty-automation"
  },
  "keywords": [
    "playwright",
    "automation",
    "warranty",
    "browser-automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "playwright": "^1.40.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "fs-extra": "^11.1.1",
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
} 